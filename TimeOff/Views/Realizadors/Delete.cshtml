@model TimeOff.Models.Realizador

@{
    ViewBag.Title = "Delete";
}

<h2>Apagar</h2>

<h3>Tens a certeza que queres que apagar isto ?</h3>
<div>
    @*Vai buscar o css*@

    <link rel="stylesheet" href="~/Content/TimeOff.css" />
    <div id="main">
        <div style="border:solid;border-color:black;">
            @*Fotografia do Realizador*@
            <img src="~/Imagens/@Html.DisplayFor(model => model.ImagemRealizador)" width="285" height="413" />
        </div>
        <div>
            @*Nome do Realizador*@
            <div class="nome">@Html.DisplayFor(model => model.NomeRealizador)</div>
            @*Ano de Nascimento*@
            <div style="margin-left: 150px;">
                <h3 style="font-family:Arial; font-weight:bold; color:black;">@Html.DisplayFor(model => model.DataNasc)</h3>
            </div>
        </div>
    </div>


    @*Biografia do Realizador*@
    <div class="sinopse">
        <h3 style="font-family:Arial; font-weight:bold; color:darkred"> Sinopse</h3>
        @Html.DisplayFor(model => model.Biografia)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
